    "inputs": [
        {
            "name": "ApiUrl",
            "type": "string",
            "label": "Api url",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "For example: https://{url}/"
        },
        {
            "name": "SwaggerJsonPath",
            "type": "string",
            "label": "PATH to JSON of Swagger",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "For example: swagger/{version}/swagger.json"
        },
        {
            "name": "TestsResultPath",
            "type": "string",
